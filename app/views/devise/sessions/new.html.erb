<%= image_tag "VaultSquare-Web-White.svg", class: "center-logo" %>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'session-form') do |f| %>
  <div class="field">
    <label>Email</label>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <label>Password</label>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <label>Remember Me</label>
    </div>
  <% end -%>

  <div class="actions">
    <button class="submit">Log In</button>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %>

<hr>

<h2>Create New Account</h2>

<%= link_to "Sign up", new_registration_path(resource_name), class: 'other-from-button' %>
