<%= image_tag "VaultSquare-Web-White.svg", class: "center-logo" %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'session-form') do |f| %>
  <div class="field">
    <label>Email</label>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <label>Password</label>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <label>Confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <button class="submit">Sign up</button>
  </div>
<% end %>

<hr>

<h2>Already have an Account?</h2>

<%= link_to "Log in", new_session_path(resource_name), class: 'other-from-button' %>
