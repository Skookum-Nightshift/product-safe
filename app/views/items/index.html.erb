<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Collection</th>
      <th>Expiration date</th>
      <th>Image</th>
      <th>Barcode</th>
      <th>Expiration date</th>
      <th>Amazon url</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.collection_id %></td>
        <td><%= item.expiration_date %></td>
        <td><%= item.image %></td>
        <td><%= item.barcode %></td>
        <td><%= item.expiration_date %></td>
        <td><%= item.amazon_url %></td>
        <td><%= item.name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

